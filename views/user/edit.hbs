<label for="">Phone number</label>
<input type="text" name="phoneNumber" id="">
<br>


<label for="">Bio</label>
<textarea name="bio" id="" cols="20" rows="6"></textarea>

<br>
<br>
<br>
<label for="">Your avatar</label>
<input type="file" name="the-picture" id="">
<br>

<button>Submit</button>

</form>
